<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/employee_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/employeeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/iv_empImg"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_empImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/str_iv_flag"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_employee_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_employee"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/iv_empImg"
            android:fontFamily="sans-serif-light" />


        <Button
            android:id="@+id/hireButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tv_employee_details"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:background="@drawable/button_border"
            android:text="Hire"
            android:textAllCaps="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:background="@color/list_divider"
        android:layout_below="@+id/employeeLayout" />
</RelativeLayout>